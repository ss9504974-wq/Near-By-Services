  <!-- Location input -->
  <input type="text" id="location" placeholder="Enter location or use current">

  <!-- ‚úÖ CURRENT LOCATION (SERVICE KE UPAR) -->
  <button class="btn-location" onclick="useCurrentLocation()">
    üìç Use Current Location
  </button>

  <!-- Service search -->
  <input
    type="text"
    id="service"
    placeholder="Search service (Hotel, Hospital...)"
    list="services">

  <datalist id="services">
    <option value="Hotel">
    <option value="Hospital">
    <option value="Medical store">
    <option value="Police station">
    <option value="Coaching class">
    <option value="Restaurant">
    <option value="ATM">
    <option value="Pharmacy">
    <option value="Gym">
  </datalist>

  <button onclick="searchNow()">Search Nearby</button>

</div>

<div id="map">
  <iframe
    id="googleMap"
    width="100%"
    height="400"
    style="border:0;"
    loading="lazy"
    allowfullscreen>
  </iframe>
</div>

<script>
function searchNow(){
  let location = document.getElementById("location").value;
  let service = document.getElementById("service").value;

  if(location === "" || service === ""){
    alert("Please enter location and service");
    return;
  }

  let mapUrl =
    "https://www.google.com/maps?q=" +
    encodeURIComponent(service + " near " + location) +
    "&output=embed";

  document.getElementById("googleMap").src = mapUrl;
  document.getElementById("map").style.display = "block";
}

function useCurrentLocation(){
  if(navigator.geolocation){
    navigator.geolocation.getCurrentPosition(
      position => {
        document.getElementById("location").value =
          position.coords.latitude + "," + position.coords.longitude;
      },
      () => alert("Location permission denied")
    );
  } else {
    alert("Geolocation not supported");
  }
}
</script>

